{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "amd": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "chai": true,
        "expect": true,
        "sinon": true
    },
    "rules": {
        "arrow-parens": [
            "warn",
            "always"
        ],
        "comma-dangle": 1,
        "quotes": [
            1,
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-undef": 1,
        "strict": [
            1,
            "global"
        ],
        "no-extra-semi": 1,
        "no-console": 1,
        "no-unused-vars": 1,
        "no-debugger" : 1,
        "no-trailing-spaces": [
            1,
            {
                "skipBlankLines": true
            }
        ],
        "no-unreachable": 1,
        "no-alert": 1,
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "react/jsx-quotes": 0,
        "jsx-quotes": [
            1,
            "prefer-double"
        ],
        "react/jsx-sort-prop-types": 0,
        "react/sort-prop-types": 1,
        "semi": [
            "warn",
            "always"
        ],
        "space-before-function-paren": [
            "warn",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "ignore"
            }
        ]
    }
}
